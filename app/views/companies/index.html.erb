<p class="text-green-600 text-center font-semibold"><%= notice %></p>

<h1 class="text-5xl font-bold text-center mb-8">Comércios Locais</h1>

<!-- Campo de Pesquisa -->
<div class="flex justify-center mb-4">
  <%= form_with url: companies_path, method: :get, local: true, class: "flex items-center" do %>
    <input type="text" name="search" placeholder="Pesquisar comércios..." class="border border-gray-300 rounded-l-lg p-2 w-64" value="<%= params[:search] %>">
    <button type="submit" class="bg-blue-500 text-white rounded-r-lg px-4 py-2 font-semibold">Buscar</button>
  <% end %>
</div>

<div id="companies" class="flex flex-wrap justify-center gap-4">
  <% @companies.each do |company| %>
    <div class="bg-white rounded-lg shadow-lg w-64 md:w-80 transition-transform transform hover:scale-105">
      <%= render company %>
     
    </div>
    
  <% end %>
</div>

<p class="text-center mt-6 font-semibold">
  <%= link_to "Nova empresa", new_company_path, class: "text-blue-500 hover:underline" %>
</p>



<div class="bg-blue-600 py-10">
<br>
