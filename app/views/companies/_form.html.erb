
<section class="container mx-auto">
<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 p-4 rounded-lg mb-4">
      <h2 class="font-bold"><%= pluralize(company.errors.count, "erro") %> impediram que a empresa fosse salva:</h2>
      <ul class="list-disc ml-5">
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :image, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :image, class: "border border-gray-300 rounded-lg p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "border border-gray-300 rounded-lg p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :address, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :address, class: "border border-gray-300 rounded-lg p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :phone, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :phone, class: "border border-gray-300 rounded-lg p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :website, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :website, class: "border border-gray-300 rounded-lg p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :category, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :category, class: "border border-gray-300 rounded-lg p-2 w-full" %>
  </div>

  <div>
    <%= form.submit "Salvar", class: "bg-blue-500 text-white font-semibold rounded-lg px-4 py-2 hover:bg-blue-600 transition" %>
  </div>
<% end %>
</section>